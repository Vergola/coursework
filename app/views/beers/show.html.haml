%p
  %b Title:
  = @beer.title
%p
  %b Description:
  = @beer.description
%p
  %b Picture:
  = @beer.picture
  
%h3 Reviews:

%table.table.table-hover.table-condensed
  %thead
    %tr
      %th Email
      %th Rating
      %th Comment
      %th
      %th
      
  %tbody
    - @beer.reviews.each do |review|
      %tr
        %td=review.user.email
        %td=review.rating
        %td=review.comment
        %td=link_to 'Edit', edit_review_path(review)
        %td=link_to 'Destroy', review, :method => :delete, :data => {:confirm => 'Are you sure?'}
  
%p= link_to t('.add'), new_review_path(beer_id: @beer)

= link_to 'Edit', edit_beer_path(@beer)
\|
= link_to 'Back', beers_path
